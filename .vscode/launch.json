{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/www/html/app": "${workspaceFolder}/src/app",
                "/var/www/html/user": "${workspaceFolder}/temp/instance/user",
                "/var/www/html/test": "${workspaceFolder}/test"
            },
            "xdebugSettings": {
                "max_data": 65535,
                "show_hidden": 1,
                "max_children": 100,
                "max_depth": 5
            }
            // "log": true 
            // => to enable debugger logging.
        }
    ]
}